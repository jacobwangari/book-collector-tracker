<div class="container my-5">
    <div class="dashboard-header bg-white p-4 rounded shadow-sm mb-4">
        <div class="row align-items-center">
            <div class="col-md-6">
                <h2>Welcome back, {{username}}! ðŸ‘‹</h2>
                <p class="text-muted mb-0">You have {{totalBooks}} books in your collection</p>
            </div>
            <div class="col-md-3 text-center">
                <div class="stat-box">
                    <h3 class="text-success">{{totalBooks}}</h3>
                    <small class="text-muted">Total Books</small>
                </div>
            </div>
            <div class="col-md-3">
                <a href="/books/add" class="btn btn-primary w-100">
                    <i class="fas fa-plus"></i> Add New Book
                </a>
            </div>
        </div>
    </div>

    <div class="bg-white p-4 rounded shadow-sm">
        <h3 class="mb-4"><i class="fas fa-book"></i> My Books</h3>
        
        {{#if books}}
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="table-light">
                        <tr>
                            <th>Title</th>
                            <th>Author</th>
                            <th>Genre</th>
                            <th>Date Added</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each books}}
                            <tr>
                                <td><strong>{{this.title}}</strong></td>
                                <td>{{this.author}}</td>
                                <td><span class="genre-badge">{{this.genre}}</span></td>
                                <td>{{formatDate this.createdAt}}</td>
                                <td>
                                    <a href="/books/{{this._id}}/edit" class="btn btn-sm btn-warning">
                                        <i class="fas fa-edit"></i> Edit
                                    </a>
                                    <form id="delete-form-{{this._id}}" action="/books/{{this._id}}?_method=DELETE" method="POST" style="display: inline;">
                                        <button type="button" class="btn btn-sm btn-danger" onclick="confirmDelete('{{this._id}}', '{{this.title}}')">
                                            <i class="fas fa-trash"></i> Delete
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        {{else}}
            <div class="text-center py-5">
                <i class="fas fa-book-open fa-4x text-muted mb-3"></i>
                <h4>No books yet</h4>
                <p class="text-muted">Start building your library by adding your first book!</p>
                <a href="/books/add" class="btn btn-primary mt-3">Add Your First Book</a>
            </div>
        {{/if}}
    </div>
</div>